{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "DISPLAY": ""
            }
        },
        {
            "name": "Python: neuron_reduce_simulation.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/example/neuron_reduce_simulation.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/example",
            "args": [
                "--num_trials", "2",
                "--t_cut", "100",
                "--t_window", "6000",
                "--plot", "false",
                "--save", "true"
            ],
            "env": {
                "DISPLAY": ""
            }
        },
        {
            "name": "Python: reduce_dataset_pipeline.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/example/reduce_dataset_pipeline.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/example",
            "env": {
                "DISPLAY": ""
            }
        },
        {
            "name": "Python: Debug with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "args": [],
            "env": {
                "DISPLAY": ""
            }
        }
    ]
}

